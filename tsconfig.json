{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "DOM"
    ],
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noErrorTruncation": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test",
    "*.js",
    "*/*.cjs",
    ".*.*js",
    "*.md"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*ignoreme*"
  ]
}
